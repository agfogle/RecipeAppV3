@page
@model RecipeAppV3.Pages.RecipeList.AddModel
@{
    ViewData["Title"] = "Add";
}

<br/>
<h2 class="text-info"> Add New Recipe</h2>
<br/>

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Recipes.RecipeName"></label>
            </div>
            <div class="col-6">
                <input asp-for="Recipes.RecipeName" class="form-control" />

            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Recipes.RecipeTime"></label>
            </div>
            <div class="col-6">
                <input asp-for="Recipes.RecipeTime" class="form-control" />

            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Recipes.RecipeIngredients"></label>
            </div>
            <div class="col-6">
                <input asp-for="Recipes.RecipeIngredients" class="form-control" />

            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Recipes.RecipeInstructions"></label>
            </div>
            <div class="col-6">
                <textarea asp-for="Recipes.RecipeInstructions" class="form-control"></textarea>

            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Add Recipe" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>

        </div>
    </form>
</div>
